{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|spec/|docs)"
    },
    "plugins": [
        "plugins/markdown",
        "plugins/summarize"
    ],
    "opts": {
        "template": "node_modules/docdash",
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true
    },
    "docdash": {
        "static": false,
        "sort": true
    },
    "templates": {
        "default": {
            "layoutFile": "config/layout.tmpl"
        },
        "cleverLinks": false,
        "monospaceLinks": false
    }
}